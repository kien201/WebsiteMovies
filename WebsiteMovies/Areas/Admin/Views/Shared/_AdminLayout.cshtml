@Html.Action("CheckLogin", "Login")

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewBag.Title</title>
    <link href="~/Assets/css/bootstrap-5-1-3.css" rel="stylesheet" />
    <script src="~/Assets/js/fontawesome-5-15-3-all.min.js"></script>
    <style>
        .btn-details {
            color: #fff;
            background-color: #29a3a3;
            border-color: #29a3a3;
        }

            .btn-details:hover {
                color: #fff;
                background-color: #248f8f;
                border-color: #248f8f;
            }
    </style>
    @RenderSection("styles", false)
</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" href="@Url.Action("Index", "Movies")">
            <img src="~/Assets/Images/Logo.png" alt="Logo AnimeVn" width="80%" />
        </a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
        <!-- Navbar Search-->
        <div class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0"></div>
        <!-- Navbar-->
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="#!">Thông tin tài khoản</a></li>
                    <li><a class="dropdown-item" href="#!">Đổi mật khẩu</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li>@Html.ActionLink("Đăng xuất", "Logout", "Login", null, new { @class = "dropdown-item" })</li>
                </ul>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Tính năng quản trị</div>
                        <a class="nav-link" href="@Url.Action("Index", "Movies")">
                            <div class="sb-nav-link-icon"><i class="fas fa-chart-area"></i></div>
                            Phim
                        </a>
                        <a class="nav-link" href="@Url.Action("Index", "Series")">
                            <div class="sb-nav-link-icon"><i class="fas fa-chart-area"></i></div>
                            Series phim
                        </a>
                        <a class="nav-link" href="@Url.Action("Index", "Categories")">
                            <div class="sb-nav-link-icon"><i class="fas fa-chart-area"></i></div>
                            Thể loại phim
                        </a>
                        <a class="nav-link" href="@Url.Action("Index", "Account")">
                            <div class="sb-nav-link-icon"><i class="fas fa-chart-area"></i></div>
                            Quản lý tài khoản
                        </a>
                        <a class="nav-link" href="@Url.Action("Index", "Comments")">
                            <div class="sb-nav-link-icon"><i class="fas fa-chart-area"></i></div>
                            Quản lý bình luận
                        </a>
                        <a class="nav-link" href="@Url.Action("Index", "MovieRates")">
                            <div class="sb-nav-link-icon"><i class="fas fa-chart-area"></i></div>
                            Quản lý đánh giá
                        </a>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <span class="small">
                        Quản trị viên:
                        @{ var curUser = Session["curUser"] as Dictionary<string, string>; }
                        @curUser["displayName"]
                    </span>
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4 py-4">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/Assets/js/scripts.js"></script>
    @RenderSection("scripts", false)
</body>
</html>
