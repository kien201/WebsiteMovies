@model IEnumerable<WebsiteMovies.Models.Movie>

@{
    ViewBag.Title = "Quản lý phim";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section styles{
    <style>
        .table .table-image-heading{
            width: 12%;
        }
        .table .table-content-heading {
            width: 20%;
        }
    </style>
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Quản lý phim</li>
</ol>

<p>
    <a class="btn btn-primary" href="@Url.Action("Create")">
        <i class="fas fa-plus"></i> Thêm phim
    </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th class="table-image-heading">
            @Html.DisplayNameFor(model => model.image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.duration)
        </th>
        <th class="table-content-heading">
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th>Chức năng</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            <img src="~/Assets/Images/MovieImages/@item.image" alt="Lỗi load ảnh" width="100%" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.duration)
        </td>
        <td>
            @item.description.Substring(0, 150)
            @(item.description.Length > 150 ? "...":"")
        </td>
        <td>
            @(item.status == 0 ? "Đang tiến hành" : "Hoàn thành")
        </td>
        <td>
            <div class="btn-group">
                <a class="btn btn-details" href="@Url.Action("Details", new { id = item.id })">
                    <i class="fas fa-eye"></i> Chi tiết
                </a>
                <a class="btn btn-primary" href="@Url.Action("Edit", new { id = item.id })">
                    <i class="fas fa-pen"></i> Sửa
                </a>
                <a class="btn btn-danger" href="@Url.Action("Delete", new { id = item.id })">
                    <i class="fas fa-trash"></i> Xóa
                </a>
            </div>
        </td>
    </tr>
}

</table>
