<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <link rel="stylesheet" href="~/Assets/css/plyr.css">
    <link rel="stylesheet" href="~/Assets/css/main.css">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link rel="stylesheet" href="~/Assets/css/comment.css">
    <link rel="stylesheet" href="~/Assets/css/styles.css">
    <link rel="stylesheet" href="~/Assets/css/customer-layout.css">
    <!-- Favicons -->
    <link rel="icon" type="image/png" href="icon/favicon-32x32.png" sizes="32x32">
    <link rel="apple-touch-icon" href="icon/favicon-32x32.png">
    @RenderSection("css", false)
    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta name="author" content="Dmitry Volkov">
    <title>Anime</title>
</head>
<body>
    <!-- header (hidden style) -->
    <div class="wrapper">
        <div class="header p-2">
            <div class="nav-bar row row-cols-auto align-items-center">
                <div class="logo">
                    <a href="/Home/Index"><img src="~/Assets/Images/Logo.png" alt="Logo"></a>
                </div>
                <div class="search-bar flex-fill">
                    <form action="">
                        <div class="input-group flex-nowrap">
                            <input type="text" class="input-search bg-black color-gray" placeholder="Nhập từ khóa...">
                            <button type="submit" class="btn-top btn bg-black color-gray">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </form>
                </div>
                <div class="nav-right">
                    <a href="#" id="toggle-search" class="btn-top btn bg-black color-gray">
                        <i class="fas fa-search"></i>
                    </a>
                    <a href="#" class="btn-top btn bg-black color-gray">
                        <i class="fas fa-bars"></i>
                    </a>
                    <a href="#" class="btn-top btn bg-black color-gray">
                        <i class="fas fa-history"></i>
                    </a>
                    <a href="#" class="btn-top btn bg-black color-gray">
                        <i class="fas fa-bookmark"></i>
                    </a>
                    <a href="#" class="btn-top btn bg-black color-gray">
                        <i class="fas fa-sign-in-alt"></i>
                    </a>
                    <!-- after login -->
                    <a href="#" class="btn-top btn bg-black color-gray d-none">
                        <i class="fas fa-user-circle"></i>
                    </a>
                </div>
            </div>
            <!-- some modal -->
        </div>
        <!-- end header -->
        @RenderBody()

        <div class="footer p-2">
            Copyright © AnimeVn 2021
        </div>
    </div>
    <!-- end footer -->
    <!-- JS -->

    <script src="~/Assets/js/bootstrap.bundle.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="~/Assets/js/jquery-3.5.1.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>   
    <script src="~/Assets/js/comment.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
